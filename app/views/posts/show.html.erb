
<div class="form-container">
  <div class="py-5">
    <div class="mb-5">
      <%= image_tag @post.image ,  class:"single-post-image" %>
    </div>
  </div>

  <h2 class="title"> <%= @post.title %></h2>
  <p class="subtitle is-6 mb-1">
    <%= link_to   @post.user.username,posts_path(username: @post.user.username) %>
  </p>
  <%= link_to @post.category.name, posts_path(category_id: @post.category_id) , class:'tag is-primary' %>
  <p class=""><%= @post.created_at.strftime("created in %B %d, %Y") %></p>
  <p><%= @post.body %></p>
  <% if user_signed_in? &&  current_user.id == @post.user_id %>
    <div class="mt-5 is-flex">
      <div class="is-3">
        <%= link_to "Edit article" , edit_post_path(@post) , class:'button is-warning '  %>
      </div>
      <div class="mr-3">
        <%= link_to "Delete article", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } , class:'button is-danger '  %>
      </div>
    </div>

  <%end %>
</div>









