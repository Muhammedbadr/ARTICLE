<div id="<%= dom_id post %>">
  <p>
    <strong>Image:</strong>
    <% if post.image.attached? %>
      <%= image_tag post.image %>
    <% else %>
      No image available.
    <% end %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= post.category_id %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

</div>
