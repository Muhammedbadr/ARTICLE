<div class="form-container">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },html: {class: 'box'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<h2 class="is-size-4">Forgot your password?</h2>

  <div class="field">
    <%= f.label :email , "Email",class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" , class:"button is-primary is-fullwidth" %>
  </div>
  <div class="has-text-centered mt-3">
  <div class="is-inline mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>


</div>