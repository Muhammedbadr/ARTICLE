# Sign up
<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'box'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2 class="is-size-4">Sign up</h2>

    <div class="field">
      <%= f.label :username, "Username", class: "label" %>
      <div class="control has-icons-left">
        <%= f.text_field :username, class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i> <!-- User icon -->
        </span>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, "Email", class: "label" %>
      <div class="control has-icons-left">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i> <!-- Email icon -->
        </span>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, "Password", class: "label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="control has-icons-left">
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i> <!-- Lock icon -->
        </span>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Password confirmation", class: "label" %>
      <div class="control has-icons-left">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-check"></i> <!-- Check icon -->
        </span>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button is-primary is-fullwidth" %>
    </div>

    <div class="mt-3 has-text-centered">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>