<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'box' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2 class="is-size-4">Edit <%= resource_name.to_s.humanize %></h2>

    <div class="field mb-3"> <!-- Reduced margin-bottom -->
      <%= f.label :email, "Email", class: "label" %>
      <div class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i> <!-- Email icon -->
        </span>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-3">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div> <!-- Reduced margin-bottom -->
    <% end %>

    <div class="field mb-3"> <!-- Reduced margin-bottom -->
      <%= f.label :password, "Password", class: "label" %> 
      <i>(leave blank if you don't want to change it)</i>
      <div class="control">
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i> <!-- Lock icon -->
        </span>
      </div>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field mb-3"> <!-- Reduced margin-bottom -->
      <%= f.label :password_confirmation, "Password confirmation", class: "label" %>
      <div class="control">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-check"></i> <!-- Check icon -->
        </span>
      </div>
    </div>

    <div class="field mb-3"> <!-- Reduced margin-bottom -->
      <%= f.label :current_password, "Current password", class: "label" %>
      <i>(we need your current password to confirm your changes)</i>
      <div class="control">
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-key"></i> <!-- Key icon -->
        </span>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "button is-primary is-fullwidth" %>
    </div>

  <% end %>

</div>
